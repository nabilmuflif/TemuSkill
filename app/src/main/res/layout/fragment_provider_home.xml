<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F9F9F9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/btn_notif"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/notifikasi"
            app:tint="#111D5E"
            android:layout_marginEnd="24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_profile"
            app:layout_constraintBottom_toBottomOf="@id/iv_profile"/>

        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Halo, Mitra!"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/iv_profile"
            app:layout_constraintStart_toStartOf="@id/iv_profile"/>

        <TextView
            android:id="@+id/tv_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Siap menerima\npesanan hari ini?"
            android:fontFamily="@font/poppins_bold"
            android:textSize="22sp"
            android:textColor="#111D5E"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_greeting"
            app:layout_constraintStart_toStartOf="@id/iv_profile"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#111D5E"
            app:layout_constraintTop_toBottomOf="@id/tv_headline">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/lbl_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo >"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*****"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:letterSpacing="0.2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:id="@+id/divider_card"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/lbl_saldo"/>

                <TextView
                    android:id="@+id/lbl_trx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaksi Selesai"
                    android:textColor="#B3E5FC"
                    android:textSize="11sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_card"/>

                <TextView
                    android:id="@+id/tv_transaction_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/lbl_trx"
                    app:layout_constraintTop_toBottomOf="@id/lbl_trx"/>

                <TextView
                    android:id="@+id/lbl_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendapatan Total"
                    android:textColor="#B3E5FC"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/lbl_trx"/>

                <TextView
                    android:id="@+id/tv_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 0"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintEnd_toEndOf="@id/lbl_income"
                    app:layout_constraintTop_toBottomOf="@id/lbl_income"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_transaction_count"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ketuk icon untuk refresh"
                        android:textColor="#B3E5FC"
                        android:textSize="10sp"
                        android:layout_marginEnd="6dp"/>

                    <ImageView
                        android:id="@+id/btn_refresh"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_popup_sync"
                        app:tint="#FFFFFF"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/card_balance">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rating terakhir"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#333"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star_orange"/>

                <TextView
                    android:id="@+id/tv_rating_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="12dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back_ios"
                    android:rotation="180"
                    app:tint="#CCC"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_jadwal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal hari ini"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/card_rating"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_schedule_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_jadwal_title">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢"
                android:textColor="#F44336"
                android:textSize="20sp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_schedule_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum ada jadwal spesifik hari ini."
                android:textSize="13sp"
                android:textColor="#555"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_view_all_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat semua jadwal"
            android:textAllCaps="false"
            android:backgroundTint="#111D5E"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/layout_schedule_1"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>