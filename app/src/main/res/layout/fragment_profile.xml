<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil Saya"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/profile"
            app:civ_border_width="4dp"
            app:civ_border_color="#FFFFFF"
            android:layout_marginTop="130dp"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pengguna"
            android:fontFamily="@font/poppins_bold"
            android:textSize="22sp"
            android:textColor="#333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/iv_profile_pic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio pengguna"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textColor="#757575"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@user.com"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_bio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/btn_verify_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajukan Verifikasi >"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="#111D5E"
            android:background="?attr/selectableItemBackground"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/btn_verify_status">

            <LinearLayout
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#555"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit Profil"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right_white"
                    app:tint="#CCC"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5"/>

            <LinearLayout
                android:id="@+id/btn_my_services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:tint="#555"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Layanan Saya"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelola"
                    android:textColor="#111D5E"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right_white"
                    app:tint="#CCC"/>
            </LinearLayout>
            <View
                android:id="@+id/divider_services"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5"/>

            <LinearLayout
                android:id="@+id/btn_my_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star_orange"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ulasan Saya"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right_white"
                    app:tint="#CCC"/>
            </LinearLayout>
            <View
                android:id="@+id/divider_reviews"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F5F5F5"/>

            <LinearLayout
                android:id="@+id/btn_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_mapmode"
                    app:tint="#555"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bahasa Aplikasi"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right_white"
                    app:tint="#CCC"/>
            </LinearLayout>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F5F5F5"/>

            <LinearLayout
                android:id="@+id/btn_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#555"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tentang Kami"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_right_white"
                    app:tint="#CCC"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:layout_marginTop="20dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout"/> <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keluar"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#D32F2F"
                android:textSize="16sp"
                android:layout_marginStart="16dp"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_orange"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_circle_blue"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>