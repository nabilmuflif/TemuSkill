<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <FrameLayout
        android:id="@+id/btn_back_container"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_btn_back_circle"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_back_ios"
            app:tint="#FFFFFF"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back_container"
        app:layout_constraintBottom_toTopOf="@id/btn_ajukan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajukan Verifikasi untuk\nakun TemuSkill Anda!"
                android:fontFamily="@font/poppins_bold"
                android:textSize="22sp"
                android:textColor="#111D5E"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangun eksistensi Anda dan dapatkan kepercayaan yang lebih besar dari konsumen."
                android:fontFamily="@font/poppins_regular"
                android:textSize="13sp"
                android:textColor="#333"
                android:layout_marginBottom="32dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#111D5E"/> <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lencana Terverifikasi"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#333"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dapatkan lencana terverifikasi yang muncul di mana pun Anda berada agar calon konsumen merasa lebih yakin dengan Anda."
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_lock_lock"
                    app:tint="#111D5E"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peningkatan Perlindungan Akun"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#333"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lebih sedikit kekhawatiran mengenai penyamaran dengan pemantauan identitas proaktif."
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/search_icon"
                    app:tint="#111D5E"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengoptimalan Pencarian"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#333"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bantu konsumen menemukan Anda dengan muncul lebih tinggi di hasil pencarian saat mereka mencari Anda."
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifikasi TemuSkill tidak tersedia bagi pengguna yang belum menyelesaikan 5 pesanan dan telah aktif selama 30 hari. Lihat semua persyaratan kelayakan Verifikasi TemuSkill"
                android:textSize="11sp"
                android:textColor="#757575"
                android:lineSpacingExtra="2dp"/>

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_circle_orange"
        android:layout_marginStart="-20dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_ajukan"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:text="Ajukan Verifikasi"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:backgroundTint="#111D5E"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>