<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/layout_nav"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="24dp"
        android:paddingHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/btn_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lewati"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tv_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• • • •"
            android:textSize="24sp"
            android:textColor="#111D5E"
            android:letterSpacing="0.2"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/btn_next_circle"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_arrow_right_white"
            android:background="@drawable/bg_btn_circle_blue"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:elevation="4dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_start_big"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Mulai di sini"
        android:fontFamily="@font/poppins_bold"
        android:backgroundTint="#111D5E"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/btn_back_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#757575"
        android:textSize="14sp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="55dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>