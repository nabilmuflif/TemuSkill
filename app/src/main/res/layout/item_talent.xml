<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_talent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeWidth="1dp"
    app:strokeColor="#F0F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <ImageView
                android:id="@+id/iv_talent_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_rating_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜… 5.0"
                android:textSize="12sp"
                android:textColor="#333"
                android:textStyle="bold"
                android:background="@drawable/bg_circle_white_alpha"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_talent_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Talent"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#333"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_keahlian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spesialis AC &amp; Listrik"
                android:textSize="10sp"
                android:textColor="#757575"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp 50rb / jam"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="12sp"
                    android:textColor="#111D5E"/>

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Indonesia"
                    android:textSize="10sp"
                    android:textColor="#757575"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>